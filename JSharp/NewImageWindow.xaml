<Window x:Class="JSharp.NewImageWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:JSharp"
		xmlns:prism="http://prismlibrary.com/"
        mc:Ignorable="d"
        Title="{Binding Title}" Height="450" Width="800" Closing="Window_Closing" KeyDown="Window_KeyDown" PreviewMouseWheel="Window_PreviewMouseWheel" Activated="Window_Activated"
		>

	<Grid>
		<Image x:Name="imageControl" Source="{Binding Source}" Stretch="UniformToFill" MouseLeftButtonDown="imageControl_MouseLeftButtonDown">
			<Image.LayoutTransform>
				<ScaleTransform ScaleX="{Binding ZoomScale}" ScaleY="{Binding ZoomScale}"/>
			</Image.LayoutTransform>
		</Image>
		<Canvas x:Name="highlightCanvas" />
	</Grid>
</Window>
